
@model Department 
@{
    ViewData["Title"] = "Index";
}
<h1>Create New Department</h1>
<br />
<br />
@foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
{
    <p class="text-danger">@modelError.ErrorMessage</p>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" asp-for="Code" class="form-control"  />
        @* <span asp-validation-for="Code" class="text-danger"></span>*@
      
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control"/>
        @* <span asp-validation-for="Name" class="text-danger"></span>*@
    </div>
   

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>





